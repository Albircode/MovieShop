@*every view has only one model*@
@model IEnumerable<MovieShop.Core.models.Response.MovieResponseModel>

@{

    ViewData["Title"] = "Home Page";

}



<div class="container-fluid bg-light">

    <div class="row">

        @foreach (var movie in Model)

        {

            <div class="col-6 col-lg-3 col-sm-4">

                @await Html.PartialAsync("_MovieCard", movie)
                @*this can also be used-> <partial name="_MovieCard" model="movie" />*@

            </div>

        }

    </div>

</div>